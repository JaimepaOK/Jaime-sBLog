<!DOCTYPE html>
<html>
  <head>
    <title>RailsBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('logo.jpeg') %>
  </head>

  <body>
 <nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Jaime's Blog", posts_path, class: "navbar-brand", id: "logo" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to "Post", posts_path %></li>
        <% if session[:user_id]%>
    <li><%= link_to('Crear Post', new_post_path)%></li>
    <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
       <% if session[:user_id] %>
       <li><%= link_to User.find(session[:user_id]).username, edit_user_path(current_user)%></li>
       <li><%= link_to "Cerrar sesion", destroy_session_path %></li>
        <% else %>
        <li><%= link_to "Iniciar sesion", new_session_path %></li>
        <li><%= link_to "Registarse", new_user_path %></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div id="flash-notice"><%= flash[:notice] if flash[:notice] %></div>
<%= yield %>
  </body>
</html>


