<%# create a new user or edit user %>


<div id="user-form" class="row">
 <div class="col-xs-12">
  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :Usuario %>
   </div>
   <div class="col-sm-8">
    <%= f.text_field :username, class: "form-control", placeholder: "Nombre de Usuario", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :Email %>
   </div>
   <div class="col-sm-8">
    <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
   </div>
  </div>

  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :Foto %>
   </div>
   <div class="col-sm-8">
    <%= f.text_field :photo, class: "form-control", placeholder: "Url de la foto" %>
   </div>
  </div> 

  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :Contrase単a %>
   </div>
   <div class="col-sm-8">
    <%= f.password_field :password, class: "form-control", placeholder: "Contrase単a" %>
   </div>
  </div>

  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :"Confirme Contrase単a" %>
   </div>
   <div class="col-sm-8">
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirme Contrase単a" %>
   </div>
  </div>



  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit(@user.new_record?  ? "Registrase" : "Actualizar cuenta", class: 'btn btn-primary btn-large') %>
   </div>
  </div>

  
  
<% end %>
  <div class="col-xs-4 col-xs-offset-2">
  [ <%= link_to 'Cancelar', posts_path %> ]
  </div> 
 </div>
</div>