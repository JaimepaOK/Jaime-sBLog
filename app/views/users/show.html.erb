<%# show all users %>

<h1 align="center">Bienvenido a la pagina de <%= @user.username %></h1>

<div class="row">
 <div class="col-md-4 col-md-offset-4 center">
 </div>
</div>
<h4 align="center">Articulos de <%= @user.username %></h4>

<div align="center">
    <% @user.posts.reverse.each do |post| %>
        <h5>creado: <%= post.user.created_at %></h5>
        <h5>Post: <%= link_to(post.body.html_safe, post) %> </h5>
      <% end %>
</div>

<div align="center">
    <% if current_user && current_user.id == @user.id %>
    <%= link_to "Editar", edit_user_path(@user) %>
    </br>
    <%= link_to "Borrar", @user, method: 'delete' %>
    <% end %>
</div>