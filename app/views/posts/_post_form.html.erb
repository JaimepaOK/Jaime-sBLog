<%# login/edit template %>
<div class="row">
 <div class="col-xs-12">
  <%= form_for(@post, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :Titulo %>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :title, class: "form-control", placeholder: "Titulo del articulo", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :Descripción %>
   </div>
   <div class="col-sm-6">
    <%= f.hidden_field :body, id: :desc , rows: 10, class: "form-control", 
    placeholder: "Descripción del articulo" %>
    <trix-editor input="desc"></trix-editor>
   </div>
  </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit :"Crear Articulo", class: 'btn btn-primary btn-large' %>
   </div>
  </div>
<% end %>
 </div>
</div>